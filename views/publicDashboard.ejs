    }

    .animated-virus:nth-child(5n) {
        background: radial-gradient(circle, #9b59b6, #8e44ad);
        animation-delay: -5s;
    }

    .animated-virus:nth-child(5n)::before {
        box-shadow: 
            0 36px 0 #9b59b6,
            -15px 15px 0 #9b59b6,
            15px 15px 0 #9b59b6,
            -15px -15px 0 #9b59b6,
            15px -15px 0 #9b59b6;
    }

    @keyframes waterFall {
